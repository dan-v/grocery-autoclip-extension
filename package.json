{
  "name": "grocery-autoclip-extension",
  "version": "2.1.0",
  "description": "Chrome extension for automatically clipping Safeway digital coupons",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "node build.js",
    "build:watch": "node build.js --watch",
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean",
    "build:webstore": "npm run build && ./scripts/build-webstore.sh",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "quality-check": "npm run type-check && npm run lint",
    "check": "npm run quality-check",
    "precommit": "npm run quality-check"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.1",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "esbuild": "^0.25.6",
    "eslint": "^9.31.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
